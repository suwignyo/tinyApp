<!DOCTYPE html>
<html lang="en">
  <head>
    <% include partials/_bootstrap %>
        <title>Tiny App</title>
  </head>
  <body style="font-size:20px; padding:50px;">
    <% include partials/_header %>
    <form action="/login" method="POST" style="margin:50px;">
      <label for="login">Login:</label>
      <%  errors.forEach(function(error) { %>
      <li><%= error %></li>
      <% }) %>
      <input id="login" type="email" name="email" style="width: 300px">
      <input id="login" type="password" name="password" style="width: 300px">
      <input type="submit" value="Submit">
    </form>
  </body>
</html>

